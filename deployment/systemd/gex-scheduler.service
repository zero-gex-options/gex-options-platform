[Unit]
Description=GEX Calculation Scheduler
After=network.target postgresql.service gex-ingestion.service
Wants=postgresql.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/gex-options-platform

ExecStart=/home/ubuntu/gex-options-platform/deployment/run/scheduler.sh

# Restart behavior
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=gex-scheduler

[Install]
WantedBy=multi-user.target
